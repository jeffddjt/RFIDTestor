
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <style>
        *{
            margin:0;
            padding:0;
        }
        body{
           background:#fff;
        }
        th,td{
            border:1px solid #000;
            padding:3px;
        }
        .main{
            margin:0 auto;
            margin-top:20px;
            width:1000px;
        }
    </style>
    <script>
        function getContent() {
            $.get("api/rfid/GetList", function (data) {            
                $("#content").empty();
                $(data).each(function (index,item) { 
                    var s = "<tr>";
                    s += "<td>" + item.epc + "</td>";
                    s += "<td>" + item.rssi + "</td>";
                    s += "</tr>";
                    $("#content").append(s);
                });

            });

        }
        var ti = setInterval(getContent, 1000);
    </script>
</head>
<body>
    <div class="main">
        <table cellspacing="0" cellpadding="3" style="width:100%;border-collapse:collapse">
            <thead>
                <tr>
                    <th>EPC号</th>
                    <th style="width:100px;">信号强度</th>
                </tr>
            </thead>
            <tbody id="content">

            </tbody>
        </table>
    </div>
</body>
</html>
